<!-- Define a function to render each sleep log -->
<% function renderSleeplog(sleeplog) { %>
  <div class="item-preview">
    <h2>Date: <%= sleeplog.date %></h2>
    <p>Hours Slept: <%= sleeplog.hoursSlept %></p>
    <p>Quality: <%= sleeplog.quality %></p>
    <p>Comments: <%= sleeplog.comments %></p>
  </div>
  <% } %>
  
  <!DOCTYPE html>
  <html lang="en">
    <!-- Pass a JavaScript variable to a partial in EJS -->
    <%- include('partials/head.ejs', { title: "Sleeplogs" }) %>
  
    <body>
      <%- include('partials/navbar.ejs') %>
      <%- include('partials/hero.ejs') %>
      <div class="content">
        <div class="home">
          <div class="item-list">
            <% if (sleeplogs.length > 0) { %>
            <!-- Call the renderSleepLog function for each sleep log -->
            <% sleepLogs.forEach(renderSleeplog); %>
            <% } else { %>
            <p>No sleeplogs found.</p>
            <% } %>
          </div>
        </div>
      </div>
      <%- include('partials/ads.ejs') %>
      <%- include('partials/footer.ejs') %>
    </body>
  </html>